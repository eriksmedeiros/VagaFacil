<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="547.0" prefWidth="619.0" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.vagafacil.controller.ListarEmpresasController">
   <children>
       <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Listar Empresas" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
             <ComboBox fx:id="cbAreaAtuacao" promptText="Selecione a área de atuação" />
            <Button mnemonicParsing="false" onAction="#buscarEmpresas" text="Buscar">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
       <ListView fx:id="lvEmpresas" prefHeight="370.0" prefWidth="579.0" />
       <Button fx:id="btnVoltar" onAction="#voltarParaTelaInicial" text="Voltar" />
   </children>
</VBox>
